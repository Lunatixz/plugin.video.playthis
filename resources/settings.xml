        <setting label="30701" type="slider" id="history-size-limit" default="25" range="0,50" option="int"/>
        <setting label="30707" id="history-add-on-play" type="bool" default="true"/>
        <setting type="sep"/>
        <setting label="30102" id="clear-history" type="action" action="RunPlugin(plugin://$ID/?mode=clearhistory)"/>
    </category>
    <category label="30708">
    <!-- M3U -->
        <setting label="30706" id="export_path" type="folder" source="files" option="writeable"/>
    </category>
    <category label="30709">
    <!-- URLResolver -->
        <setting label="30705" id="urlresolver-settings" type="action" option="close" action="RunPlugin(plugin://plugin.video.playthis/?mode=urlresolver)"/>
    </category>
</settings>
